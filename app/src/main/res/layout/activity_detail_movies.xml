<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovies"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgMovDet"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/titleMovDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/imgMovDet"
        android:text="@string/mov_name"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/descMovDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleMovDet"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imgMovDet"
        android:ellipsize="end"
        android:text="@string/mov_desc"/>

</RelativeLayout>